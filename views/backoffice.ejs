<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Game Score Tracker</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f7fa;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }
        
        .container {
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            padding: 32px;
            width: 100%;
            max-width: 450px;
        }
        
        h2 {
            color: #2c3e50;
            margin-top: 0;
            margin-bottom: 24px;
            text-align: center;
            font-size: 28px;
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        label {
            display: block;
            margin-bottom: 6px;
            font-weight: 600;
            color: #4a5568;
            font-size: 14px;
        }
        
        input, select {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            font-size: 16px;
            outline: none;
            transition: border-color 0.3s;
            box-sizing: border-box;
        }
        
        input:focus, select:focus {
            border-color: #3498db;
        }
        
        button {
            background-color: #3498db;
            color: white;
            border: none;
            border-radius: 8px;
            padding: 14px 24px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            width: 100%;
            transition: background-color 0.3s;
        }
        
        button:hover {
            background-color: #2980b9;
        }
        
        .recent-scores {
            margin-top: 32px;
            border-top: 1px solid #e2e8f0;
            padding-top: 24px;
        }
        
        .score-card {
            background-color: #f8fafc;
            border-radius: 8px;
            padding: 16px;
            margin-bottom: 12px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .score-game {
            font-weight: 600;
            color: #3498db;
        }
        
        .score-value {
            font-weight: 700;
            font-size: 18px;
        }
        
        .python { color: #4B8BBE; }
        .unity { color: #00CCDA; }
        .blender { color: #E87D0D; }
        .website { color: #61DAFB; }
    </style>
</head>
<body>
    <div class="container">
        <h2>Game Score Tracker</h2>
        
        <form id="scoreForm">
            <div class="form-group">
                <label for="username">Username</label>
                <input id="username" type="text" placeholder="Enter your username" required>
            </div>
            
            <div class="form-group">
                <label for="game">Select Game</label>
                <select id="game" class="Game" required>
                    <option value="" disabled selected>Choose a game</option>
                    <option value="python">Python</option>
                    <option value="unity">Unity</option>
                    <option value="blender">Blender</option>
                    <option value="website">Website</option>
                </select>
            </div>
            
            <div class="form-group">
                <label for="score">Score</label>
                <input id="score" type="number" placeholder="Enter your score" required>
            </div>
            
            <button type="submit">Add Score</button>
        </form>
    </div>

    <script>
        document.getElementById('scoreForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const username = document.getElementById('username').value;
            const game = document.getElementById('game').value;
            const score = document.getElementById('score').value;
            
            if (username && game && score) {
                fetch('./addScore', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ username, game, score }),
                })
                .then(response => response.json())
                .then(data => {
                    console.log(data);
                    if (data.message === 'Successfully') {
                        alert('Score added successfully');
                    } else {
                        alert('Failed to add score');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Failed to add score');
                });
            }
        });
    </script>
</body>
</html>